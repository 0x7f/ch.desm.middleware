package ch.desm.middleware.modules.communication.endpoint.tcp;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;

import org.apache.log4j.Logger;

import ch.desm.middleware.modules.core.daemon.DaemonThread;

public class EndpointTcpServer_ extends DaemonThread {

	private static Logger log = Logger.getLogger(EndpointTcpServer_.class);
	
	private ServerSocket server;
	private Socket client;
	private int port;

	public EndpointTcpServer_(String threadName, int port){
		super(threadName);
		this.port = port;
	}
	
	private void initialize(){
		try {
			server = new ServerSocket(port);
			client = server.accept();
			
			log.info("Handling client at " +
					client.getInetAddress().getHostAddress() + " on port " +
					client.getPort());

			OutputStream outStream = client.getOutputStream();
			PrintWriter out = new PrintWriter(outStream);
			
			InputStream inputStream = client.getInputStream();
			InputStreamReader inputStreamReader = new InputStreamReader(inputStream);
			BufferedReader in = new BufferedReader(inputStreamReader);
			
			String inputLine = "";
			while((inputLine = in.readLine()) != null){
				log.info("Socketserver receive from client ("+client.toString()+") a stream: " + inputLine);
				
				//echo
				out.write(inputLine);				
			}
			
			client.close();
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			log.error(e);
		}
	}
	
	public void run(){
		initialize();
	}
}
