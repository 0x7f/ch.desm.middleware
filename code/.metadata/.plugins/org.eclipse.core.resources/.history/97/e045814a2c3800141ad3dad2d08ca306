package ch.desm.middleware.modules.communication.endpoint.tcp;

import java.io.IOException;
import java.net.Socket;

import org.apache.log4j.Logger;

public class EndpointTcpServer {

	private static Logger log = Logger.getLogger(EndpointTcpServer.class);
	
	private EndpointTcpClientThread thread;
	protected Socket client;
	private String ip;
	private int port;
	
	public EndpointTcpServer(String threadName, String ip, int port) {
		this.ip = ip;
		this.port = port;
		thread = new EndpointTcpClientThread(this);
		initialize();
	}

	private void initialize() {
		try {
			client = new Socket(ip, port);
			thread.run();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			log.error(e);
		}
	}
	
}
