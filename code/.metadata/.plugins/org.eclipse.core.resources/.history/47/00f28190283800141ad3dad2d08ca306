package ch.desm.middleware.modules.communication.endpoint.tcp;

import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.net.SocketException;

import org.apache.log4j.Logger;

import ch.desm.middleware.modules.core.daemon.DaemonThread;

public class EndpointTcpClient {

	private static Logger log = Logger.getLogger(EndpointTcpClient.class);
	
	private EndpointTcpClientThread thread;
	private Socket client;
	private String ip;
	private int port;
	
	public EndpointTcpClient(String threadName, String ip, int port) {
		this.ip = ip;
		this.port = port;
		thread = new EndpointTcpClientThread(this);
		initialize(ip, port);
	}

	private void initialize(String ip, int port) {
		try {
			client = new Socket(ip, port);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			log.error(e);
		}
	}
	
}
