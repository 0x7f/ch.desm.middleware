package ch.desm.middleware.modules.communication.endpoint.virtual;

import java.util.HashMap;
import java.util.Hashtable;
import java.util.Map;
import java.util.concurrent.ArrayBlockingQueue;

import ch.desm.middleware.modules.communication.endpoint.EndpointCommon;

public class EndpointInterlockingLogic extends EndpointCommon {

	Hashtable<String, Boolean> map;
	InterlockingPetriNet net;
	
	public EndpointInterlockingLogic(){
		map = new Hashtable<String, Boolean>();
		net = new InterlockingPetriNet();
	}
	
	
	/**
	 * 
	 * @param key
	 * @param value
	 */
	public void addMessage(String key, Boolean value){
		map.put(key, value);
	}

	/*
	 *
	 * @see ch.desm.middleware.modules.communication.endpoint.EndpointCommon#pollingCommand()
	 */
	@Override
	public void pollingCommand(){
		  try {
			
			  Boolean value = net.fireOneTransition();
			  String key = net.getFiredElement();
			  map.put(key, value);
			  System.out.println("key: " +key+ ", value: " + value);
			
		}
	}
}
