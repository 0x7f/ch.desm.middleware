package ch.desm.middleware.modules.communication.endpoint;

import ch.desm.middleware.modules.core.daemon.DaemonThread;


/**
 * 
 * @author Sebastian
 *
 */
public abstract class EndpointThreadBase extends DaemonThread {


	/**
	 * send digital and analog state to ubw
	 */
	public abstract void pollingCommand();

	/**
	 * start endpoint polling
	 */
	public abstract void startPolling();

	/**
	 * stop endpoint polling
	 */
	public abstract void stopPolling();
}