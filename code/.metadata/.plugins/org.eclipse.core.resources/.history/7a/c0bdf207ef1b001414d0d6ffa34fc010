package ch.desm.middleware.modules.core.daemon;

import ch.desm.middleware.modules.communication.endpoint.EndpointCommon;

/**
 * Abstract Thread Daemon
 * 
 * @author Sebastian
 *
 */
public abstract class DaemonThread extends Thread {

	public EndpointCommon endpoint;
	
	public DaemonThread(String name, EndpointCommon endpoint) {
		this.setName(name);
		this.endpoint = endpoint;
		
		setDaemon(true);
	}
	
	/**
	 * 
	 */
	@Override
	public void run() {
		while (!isInterrupted()) {
			endpoint.pollingCommand();
		}
	}
}