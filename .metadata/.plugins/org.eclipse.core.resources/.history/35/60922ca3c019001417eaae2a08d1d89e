package ch.desm.middleware.modules.communication.endpoint.serial.ubw32;


public class EndpointUbw32RegisterAnalog extends EndpointUbw32RegisterBase {

	private static final int MAX_DISCRET_VALUE = 1023;
	
	private String pinBitMask;

	public EndpointUbw32RegisterAnalog(String pinBitMask){
		this.pinBitMask = pinBitMask;
	}
		
	public void setValue(String value){
		if(!isValueOk(Integer.parseInt(value))){
			try {
				throw new Exception("The analog input has a wrong value.");
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		this.pinBitMask = value;
	}
	
	public String getPinBitMask(){
		return pinBitMask;
	}

	private boolean isValueOk(int value){
		if(value < 0 || value > MAX_DISCRET_VALUE) return false;
		
		return true;
	}
}
