package ch.desm.middleware.modules.communication.endpoint.virtual;

import ch.desm.middleware.modules.core.daemon.DaemonThread;

class EndpointInterlockingLogicPolling extends DaemonThread {

	EndpointInterlockingLogic endpoint;
	
	public EndpointInterlockingLogicPolling(String name, EndpointInterlockingLogic endpoint) {
		super(name);
		this.endpoint = endpoint;
	}
	
	/**
	 * 
	 */
	@Override
	public void run() {
		while (!isInterrupted()) {
			endpoint.pollingCommand();
		}
	}

}
