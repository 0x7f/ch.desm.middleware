package ch.desm.middleware.modules.component.simulation.locsim;

import java.util.Map;
import java.util.Map.Entry;

import org.apache.log4j.Logger;

import ch.desm.middleware.modules.component.ComponentMapBase;

public class Re420MapBinding extends ComponentMapBase  {

	private static Logger log = Logger.getLogger(LocsimBaseImpl.class);
	
	@Override
	public Map<String, String> getMap() {
		return this.map;
	}

	public String getBinding(String s){
		String bindingKey = "";
		String bindingValue = "";
		
		for(Entry<String, String> element : map.entrySet()){
			if(element.getKey().equals(s)){
				bindingKey = !element.getKey().equals(s) ? element.getKey() : "";
				break;
			}else if(element.getValue().equals(s)){
				bindinValue = !element.getValue().equals(s) ? element.getValue() : "";
				break;
			}
		}

		return binding;
	}
	
	@Override
	protected void initialize() {
		
		map.put("s182.3", "l182.3"); //Türfreigabe links
		map.put("s182.4", "l185"); //Türfreigabe rechts
		map.put("s182", "l182.4"); //Türverriegelung
	}

}
